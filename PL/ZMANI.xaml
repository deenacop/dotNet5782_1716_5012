<Window x:Class="PL.ZMANI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ZMANI" Height="640" Width="800">
    <Window.Resources>

        <Style x:Key="k" TargetType="Button">
            <Setter Property="Background" >
                <Setter.Value>
                    <LinearGradientBrush >
                        <GradientStop Offset="0.5" Color="#e0c3fc"/>
                        <GradientStop Offset="1" Color="#8ec5fc"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid>
        <Button Content="Button" Style="{StaticResource k}" HorizontalAlignment="Left" Margin="34,162,0,0" VerticalAlignment="Top" Height="221" Width="215" Click="Button_Click"/>
        <Button Content="Button" Style="{StaticResource k}" HorizontalAlignment="Left" Margin="306,272,0,0" VerticalAlignment="Top" Height="111" Width="111"/>

    </Grid>
</Window>
