<Window x:Class="PL.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="SignUpWindow" Height="300" Width="200" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Label}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border CornerRadius="15" BorderThickness="1" Background="#FF0F4E7A" Opacity="0.9" Margin="-15,0,-13,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="WhiteSmoke" Opacity="1" Width="200" DataContext="{Binding user}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="1.4*"/>
        </Grid.RowDefinitions>
        <TextBlock  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="17" Text="Create Account" Foreground="#FF0F4E7A" FontWeight="Bold" />
        <Label  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Width="120" Height="45" Style="{DynamicResource RoundedButtonStyle}"  >
            <TextBox BorderBrush="{x:Null}" Width="132" Height="24" Background="{x:Null}" Text="{Binding Path=Name, Mode=TwoWay}" PreviewKeyDown="TextBox_OnlyLetters_PreviewKeyDown"   />
        </Label>
      
        <Label  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Width="120" Height="45" Style="{DynamicResource RoundedButtonStyle}">
            <TextBox  BorderBrush="{x:Null}" Width="132" Height="24" Background="{x:Null}" Foreground="White" FontFamily="Franklin Gothic Demi" Text="{Binding Path=EmailAddress, Mode=TwoWay}" PreviewKeyDown="TextBox_Email_PreviewKeyDown" />
        </Label>
        <Label  HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Row="3" Width="120" Height="45" Style="{DynamicResource RoundedButtonStyle}">
            <TextBox BorderBrush="{x:Null}" Width="132" Height="24" Background="{x:Null}"  Text="{Binding Path=Password, Mode=TwoWay}" PreviewKeyDown="password_PreviewKeyDown"/>
        </Label>
        <Label  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="4" Width="70" Height="37" Style="{DynamicResource RoundedButtonStyle}"  Content="SIGN UP" FontFamily="Franklin Gothic Demi" FontSize="10" Foreground="White" MouseDown="save_Click">
        </Label>
    </Grid>
</Window>
